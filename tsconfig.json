{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "es2015"
    ],
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*.ts",
    "src/**/__mocks__/*.ts"
  ],
  "compileOnSave": true,
  "sourceMap": true
}
